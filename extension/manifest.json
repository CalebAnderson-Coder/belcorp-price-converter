{
  "manifest_version": 3,
  "name": "Belcorp Price Converter",
  "version": "1.0",
  "description": "Convierte precios de COP a USD en el cat√°logo digital de Belcorp",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://catalogodigital.somosbelcorp.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://catalogodigital.somosbelcorp.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
